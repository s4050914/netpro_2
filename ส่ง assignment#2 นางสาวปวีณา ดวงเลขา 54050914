import java.net.MalformedURLException;
import java.net.URL;
import java.net.URLConnection;
import java.util.List;
import java.util.Map;
import java.util.logging.Level;
import java.util.logging.Logger;
import javax.swing.JEditorPane;
import javax.swing.JTextArea;

/**
 *
 * @author jengInari
 */
public class myThreads implements Runnable {
    
    private int threadNm;
    private JEditorPane webdisplay;
    private JTextArea urlField;
    private String url;

    myThreads(String url,JEditorPane jp,JTextArea uf,int thnum){ 
        this.threadNm = thnum;
        this.url = url;
        this.webdisplay = jp;
        this.urlField = uf;
        this.urlField.append("Thread "+thnum+" start.\n");
    }
    
    @Override
    public void run() {
        try{
            this.urlField.append("Thread get Url : "+this.url);
            this.webdisplay.setPage(url);
            this.printHeader();
        }
        catch(Exception e){
        }
        this.urlField.append("Thread "+this.threadNm+" stop.\n");
    }
    
    private void printHeader(){
        try {
            URL obj = new URL(url);
            URLConnection conn = obj.openConnection();
            
            //get all headers
            Map<String, List<String>> map = conn.getHeaderFields();
            this.urlField.append("Header Thread "+this.threadNm+"\n");
            for (Map.Entry<String, List<String>> entry : map.entrySet()) {
                this.urlField.append(entry.getKey()+" : "+entry.getValue()+"\n");
                //System.out.println("Key : " + entry.getKey() + " ,Value : " + entry.getValue());
            }
        } catch (Exception ex) {
            Logger.getLogger(myThreads.class.getName()).log(Level.SEVERE, null, ex);
        }
    }
}
